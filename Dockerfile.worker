# ----------------------------
# ‚öôÔ∏è Dockerfile.worker ‚Äì Celery / Cloud Run Job kont√©ner
# ----------------------------
FROM python:3.12-slim

ENV PYTHONUNBUFFERED=1
WORKDIR /app

# ----------------------------
# üß© Rendszerf√ºgg≈ës√©gek (OpenCV, WeasyPrint, MediaPipe, PDF, stb.)
# ----------------------------
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    pkg-config \
    cmake \
    git \
    wget \
    ffmpeg \
    libmariadb-dev-compat \
    libffi-dev \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgl1 \
    libglib2.0-0 \
    libcairo2 \
    libpango-1.0-0 \
    libpangoft2-1.0-0 \
    libgdk-pixbuf-2.0-0 \
    libgobject-2.0-0 \
    libpangocairo-1.0-0 \
    shared-mime-info \
    pango1.0-tools \
    fonts-dejavu-core \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# ----------------------------
# üì¶ Python f√ºgg≈ës√©gek
# ----------------------------
COPY requirements.txt ./
RUN pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt

# ----------------------------
# üß© GCP kliens modulok meger≈ës√≠t√©se
# ----------------------------
RUN pip install --no-cache-dir google-cloud-run google-cloud-storage

# Ellen≈ërz√©s, hogy t√©nyleg el√©rhet≈ëk
RUN python -c "from google.cloud import run_v2; print('‚úÖ google-cloud-run import OK')"
RUN python -c "from google.cloud import storage; print('‚úÖ google-cloud-storage import OK')"

# ----------------------------
# üß† Matplotlib √©s Fontconfig fixek (cache √©s font hib√°k elker√ºl√©s√©hez)
# ----------------------------
ENV MPLCONFIGDIR=/tmp/matplotlib_cache
RUN mkdir -p /tmp/matplotlib_cache && chmod -R 777 /tmp/matplotlib_cache

# ----------------------------
# üìÅ Projektf√°jlok
# ----------------------------
COPY . .

# ----------------------------
# üîê Szolg√°ltat√°si fi√≥k kulcs
# ----------------------------
COPY gcp_service_account.json /app/gcp_service_account.json
ENV GCP_SA_KEY_PATH=/app/gcp_service_account.json

# ----------------------------
# ‚öôÔ∏è Django k√∂rnyezeti be√°ll√≠t√°sok
# ----------------------------
ENV ENVIRONMENT=production
ENV PYTHONPATH=/app
ENV DJANGO_SETTINGS_MODULE=digiTTrain.settings
ENV PORT=8080

# ----------------------------
# üìÅ Temp k√∂nyvt√°r a job fut√°shoz
# ----------------------------
RUN mkdir -p /tmp/diagnostics && chmod 777 /tmp/diagnostics

# ----------------------------
# üéØ MediaPipe asset ellen≈ërz√©s
# ----------------------------
RUN if [ -f assets/pose_landmarker_full.task ]; then \
        echo "‚úÖ MediaPipe asset found."; \
    else \
        echo "‚ö†Ô∏è WARNING: MediaPipe asset not found" && exit 1; \
    fi

# ----------------------------
# ‚ñ∂Ô∏è Parancs (nem Celery daemon!)
# ----------------------------
CMD ["python", "manage.py", "run_job_execution"]
