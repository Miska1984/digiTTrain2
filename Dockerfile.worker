# Dockerfile.worker
FROM python:3.12-slim

ENV PYTHONUNBUFFERED=1
WORKDIR /app

# Rendszerf√ºgg≈ës√©gek (TELJES LISTA)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    pkg-config \
    cmake \
    git \
    wget \
    ffmpeg \
    libmariadb-dev-compat \
    libffi-dev \
    # OpenCV + MediaPipe f√ºgg≈ës√©gek
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgl1 \
    libglib2.0-0 \
    # WeasyPrint + Cairo (ha PDF gener√°l√°s is kell)
    libcairo2 \
    libpango-1.0-0 \
    libpangoft2-1.0-0 \
    libgdk-pixbuf-2.0-0 \
    libgobject-2.0-0 \
    libpangocairo-1.0-0 \
    shared-mime-info \
    pango1.0-tools \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

    
# Python f√ºgg≈ës√©gek
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Projekt f√°jlok
COPY . .

# K√∂rnyezeti v√°ltoz√≥k
ENV GCP_SA_KEY_PATH=/app/gcp_service_account.json
ENV ENVIRONMENT=production
ENV PYTHONPATH=/app
ENV DJANGO_SETTINGS_MODULE=digiTTrain.settings
ENV PORT 8080

# üÜï √öJ L√âP√âS: Tedd futtathat√≥v√° a scriptet
RUN chmod +x /app/run_worker.sh

# üÜï KRITIKUS JAV√çT√ÅS: Ez lesz a kont√©ner bel√©p√©si pontja (fel√ºl√≠rja a CMD-t)
ENTRYPOINT ["/bin/bash", "/app/run_worker.sh"]

# MediaPipe assets ellen≈ërz√©s
RUN if [ -f assets/pose_landmarker_full.task ]; then \
        echo "‚úÖ MediaPipe assets found."; \
    else \
        echo "‚ö†Ô∏è WARNING: MediaPipe asset not found" && exit 1; \
    fi

# Temp k√∂nyvt√°r
RUN mkdir -p /tmp/diagnostics && chmod 777 /tmp/diagnostics

# Celery Worker ind√≠t√°sa
CMD ["celery", "-A", "digiTTrain", "worker", "--loglevel=info", "--concurrency=2", "--pool=solo"]