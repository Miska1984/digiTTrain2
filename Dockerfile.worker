ENV PYTHONUNBUFFERED=1
WORKDIR /app

# Rendszerf√ºgg≈ës√©gek (Vide√≥elemz√©shez, OpenCV-hez, WeasyPrint-hez sz√ºks√©ges)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
