# ----------------------------
# ‚öôÔ∏è Celery / Cloud Run Job Container
# ----------------------------
FROM python:3.12-slim

ENV PYTHONUNBUFFERED=1
WORKDIR /app

# ----------------------------
# üß© System dependencies
# ----------------------------
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    pkg-config \
    cmake \
    git \
    wget \
    ffmpeg \
    libmariadb-dev-compat \
    libffi-dev \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgl1 \
    libglib2.0-0 \
    libcairo2 \
    libpango-1.0-0 \
    libpangoft2-1.0-0 \
    libgdk-pixbuf-2.0-0 \
    libgobject-2.0-0 \
    libpangocairo-1.0-0 \
    shared-mime-info \
    pango1.0-tools \
    fonts-dejavu-core \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# ----------------------------
# üßò TensorFlow / MediaPipe CPU-only environment
# ----------------------------
ENV TF_CPP_MIN_LOG_LEVEL=2
ENV TF_ENABLE_ONEDNN_OPTS=0
ENV CUDA_VISIBLE_DEVICES=-1

# ----------------------------
# üì¶ Python dependencies
# ----------------------------
COPY requirements.txt ./
RUN pip install --upgrade pip && \
    pip install --no-cache-dir --upgrade protobuf==4.25.3 && \
    pip install --no-cache-dir -r requirements.txt

# ----------------------------
# üß© GCP client libraries
# ----------------------------
RUN pip install --no-cache-dir google-cloud-run google-cloud-storage

# Verify imports
RUN python -c "from google.cloud import run_v2, storage; import tensorflow, mediapipe; print('‚úÖ Worker imports OK')"

# ----------------------------
# üß† Matplotlib cache fix
# ----------------------------
ENV MPLCONFIGDIR=/tmp/matplotlib_cache
RUN mkdir -p /tmp/matplotlib_cache && chmod -R 777 /tmp/matplotlib_cache

# ----------------------------
# üìÅ Project files
# ----------------------------
COPY . .

# ----------------------------
# üîê GCP credentials
# ----------------------------
COPY gcp_service_account.json /app/gcp_service_account.json
ENV GCP_SA_KEY_PATH=/app/gcp_service_account.json

# ----------------------------
# ‚öôÔ∏è Django environment
# ----------------------------
ENV ENVIRONMENT=production
ENV PYTHONPATH=/usr/local/lib/python3.12/site-packages:/app
ENV DJANGO_SETTINGS_MODULE=digiTTrain.settings
ENV PORT=8080

# ----------------------------
# üìÅ Temp directory for job runs
# ----------------------------
RUN mkdir -p /tmp/diagnostics && chmod 777 /tmp/diagnostics

# ----------------------------
# üéØ MediaPipe asset check
# ----------------------------
RUN if [ -f assets/pose_landmarker_full.task ]; then \
        echo "‚úÖ MediaPipe asset found."; \
    else \
        echo "‚ö†Ô∏è MediaPipe asset not found, will be downloaded at runtime."; \
    fi

# ----------------------------
# ‚ñ∂Ô∏è Run command (Cloud Run Job)
# ----------------------------
ENTRYPOINT ["python", "manage.py", "run_job_execution"]
